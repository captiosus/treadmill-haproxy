{
  "haproxy": {
    "global": ["daemon"],
    "defaults": [
      "timeout connect 5000ms",
      "timeout client 5000ms",
      "timeout server 5000ms",
      "balance roundrobin"
    ]
  },
  "services": {
    "demo": {
      "haproxy": {
        "server": ["check", "maxconn 10"],
        "listen": ["mode http"],
        "port": 8000
      },
      "treadmill": {
        "appname": "treadmld.haproxy",
        "manifest": "/home/vagrant/treadmill-haproxy/config/manifest.yaml",
        "port": 8000
      }
    },
    "connection_hold": {
      "elasticity": {
        "method": "conn_rate",
        "steps": [100, 300],
        "hold_conns": true
      },
      "haproxy": {
        "server": ["check", "maxconn 10"],
        "listen": ["mode http"],
        "port": 7000
      },
      "treadmill": {
        "appname": "treadmld.haproxy_hold",
        "manifest": "/home/vagrant/treadmill-haproxy/config/manifest.yaml",
        "port": 7000
      }
    }
  }
}
